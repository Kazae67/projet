{% extends 'base.html.twig' %}

{% block title %}My Profile
{% endblock %}

{% block body %}
	<h1>My Profile</h1>

	<h2>Personal information</h2>
	<ul>
		<li>User name:
			{{ user.username }}</li>
		<li>Email:
			{{ user.email }}</li>
	</ul>

	<h2>Addresses</h2>
	{% for address in user.addresses %}
		{% if address.isDefault %}
			<p>This is your default address:</p>
		{% endif %}
		<ul>
			<li>
				{{ address.type }}
				{{ address.street }},
				{{ address.city }},
				{{ address.postalCode }},
				{{ address.country }},
				{{ address.state }}
			</li>
		</ul>
	{% endfor %}

	{# Ici, vous pouvez ajouter des options pour Ã©diter les informations #}

{% endblock %}
