{% extends 'base.html.twig' %}

{% block title %}Delete Address
{% endblock %}

{% block body %}
	<h1>Delete Address</h1>
	<p>Are you sure you want to delete this address?</p>
	<form action="{{ path('delete_address', {'id': address.id}) }}" method="post">
		{{ csrf_token('delete' ~ address.id) }}
		<input type="submit" class="btn btn-delete" value="Yes, delete it">
		<a href="{{ path('app_profile') }}" class="btn btn-cancel">Cancel</a>
	</form>
{% endblock %}
