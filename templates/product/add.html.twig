{% extends 'base.html.twig' %}

{% block title %}Add Product{% endblock %}

{% block body %}
    <div class="parent-container">
        <div class="demi-cercle"></div>
        <div class="form-container">
            <h1>Add a New Product</h1>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.category) }} {# CATEGORIE #}
            </div>
            <div class="form-group">
                {{ form_row(form.name) }} {# NOM DU PRODUIT #}
            </div>
            <div class="form-group">
                {{ form_row(form.description) }} {# DESCRIPTION #}
            </div>
            <div class="form-group">
                {{ form_row(form.price) }} {# PRIX #}
            </div>
            <div class="form-group">
                {{ form_row(form.stockQuantity) }} {# Stock #}
            </div>
            <div class="form-group">
                {{ form_row(form.imageFile) }} {# IMAGE #}
            </div>
            <button type="submit" class="btn btn-add">Add Product</button>
            {{ form_end(form) }}

            <a href="{{ path('product') }}" class="back-link">Back to list</a>
        </div>
    </div>
{% endblock %}
