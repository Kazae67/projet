{% extends 'base.html.twig' %}

{% block title %}Edit Product
{% endblock %}

{% block body %}
	<div class="form-container">
		<h1>Edit Product</h1>

		{{ form_start(form) }}
		<div class="form-group">
			{{ form_row(form.name) }}
		</div>
		<div class="form-group">
			{{ form_row(form.description) }}
		</div>
		<div class="form-group">
			{{ form_row(form.price) }}
		</div>
		<div class="form-group">
			{{ form_row(form.stockQuantity) }}
		</div>
		<div class="form-group">
			{{ form_row(form.imageUrl) }}
		</div>
		<div class="form-group">
			{{ form_row(form.category) }}
		</div>
		<button type="submit" class="btn btn-update">Update Product</button>
		{{ form_end(form) }}

		<a href="{{ path('product') }}" class="back-link">Back to list</a>
	</div>
{% endblock %}
