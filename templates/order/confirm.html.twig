{% extends 'base.html.twig' %}

{% block title %}Order Confirmation
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('js/new-adress.js') }}"></script>
{% endblock %}
{% block body %}
	<div class="parent-container">
		<div class="demi-cercle"></div>
		<div class="form-container">
	<h1>Order Confirmation</h1>

	{{ form_start(orderForm) }}

	<h2>Delivery Address</h2>

	{{ form_row(orderForm.selectedAddress) }}
	<div id="new_address_form" style="display: none;">
		{{ form_row(orderForm.street) }}
		{{ form_row(orderForm.city) }}
		{{ form_row(orderForm.state) }}
		{{ form_row(orderForm.postalCode) }}
		{{ form_row(orderForm.country) }}
		{{ form_row(orderForm.type) }}
		{{ form_row(orderForm.saveAddress) }}
	</div>
	
	<h2>Basket Details</h2>
	{% for item in items %}
		<div>
			{{ item.product.name }}
			- Quantity:
			{{ item.quantity }}
			- Price:
			{{ item.product.price }}€
		</div>
	{% endfor %}
	<p>Order Total:
		{{ total }}€</p>
		            <div id="name_and_confirm_fields" style="display: none;">
                {{ form_row(orderForm.firstName) }}
                {{ form_row(orderForm.lastName) }}
                {{ form_row(orderForm.confirmOrder) }}
            </div>
	{{ form_end(orderForm) }}

	</div>

	<script>

	</script>
{% endblock %}
